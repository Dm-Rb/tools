import json


class RWJson:

    @staticmethod
    def write2file(path, data):
        with open(path, 'w', encoding='utf-8') as f:
            json.dump(data, f, ensure_ascii=False, indent=4)


    @staticmethod
    def read_json_file(path):
        with open(path, 'r', encoding='utf-8') as f:
            data = json.load(f, ensure_ascii=False)
        return data
